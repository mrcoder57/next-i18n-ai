{
  "name": "next-i18n-ai",
  "version": "1.0.0",
  "description": "AI-powered translation for Next.js internationalization",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts", 
  "scripts": {
    "build": "tsup src/index.ts --dts --format esm,cjs --out-dir dist",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "lint": "eslint src --fix",
    "prepare": "npm run build"
  },
  "type": "module",
  "keywords": [
    "nextjs",
    "i18n",
    "ai",
    "translation"
  ],
  "author": "",
  "license": "ISC",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "cross-env": "^7.0.3",
    "eslint": "^9.20.1",
    "jest": "^29.7.0",
    "prettier": "^3.5.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@upstash/redis": "^1.34.4",
    "dotenv": "^16.4.7",
    "node-fetch": "^3.3.2"
  }
}
